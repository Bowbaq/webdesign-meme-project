{% extends "App::layout.html.twig" %}

{% block nav_content %}
    {{ knp_menu_render(knp_menu_get('App:Builder:mainMenu', [], { 'active': 'top' })) }}
{% endblock %}

{% block left %}
    {% for joke in jokes %}
        {% if loop.index is odd %}
            {% include "App:App:Util/joke-item.html.twig" with { 'joke': joke } %}
        {% endif %}
    {% endfor %}
{% endblock %}
{% block right %}
    {% for joke in jokes %}
        {% if loop.index is even %}
            {% include "App:App:Util/joke-item.html.twig" with { 'joke': joke } %}
        {% endif %}
    {% endfor %}
{% endblock %}